DOXYFILE_ENCODING      = UTF-8
PROJECT_NAME           = "tempoch-cpp"
PROJECT_NUMBER         = "@PROJECT_VERSION@"
PROJECT_BRIEF          = "Header-only C++ wrapper for tempoch"
OUTPUT_DIRECTORY       = "@CMAKE_CURRENT_BINARY_DIR@/docs/doxygen"
OUTPUT_LANGUAGE        = English
BRIEF_MEMBER_DESC      = YES
REPEAT_BRIEF           = YES
ALWAYS_DETAILED_SEC    = NO
FULL_PATH_NAMES        = NO
STRIP_FROM_PATH        = "@CMAKE_CURRENT_SOURCE_DIR@"
STRIP_FROM_INC_PATH    = "@CMAKE_CURRENT_SOURCE_DIR@/include"

MARKDOWN_SUPPORT       = YES
AUTOLINK_SUPPORT       = YES
BUILTIN_STL_SUPPORT    = YES

EXTRACT_ALL            = YES
EXTRACT_PRIVATE        = NO
EXTRACT_STATIC         = YES
EXTRACT_LOCAL_CLASSES  = YES
HIDE_UNDOC_MEMBERS     = NO
HIDE_UNDOC_CLASSES     = NO
INTERNAL_DOCS          = NO

QUIET                  = YES
WARNINGS               = YES
WARN_IF_UNDOCUMENTED   = NO
WARN_IF_DOC_ERROR      = YES
WARN_NO_PARAMDOC       = NO
WARN_AS_ERROR          = NO

INPUT                  = \
    "@CMAKE_CURRENT_SOURCE_DIR@/docs" \
    "@CMAKE_CURRENT_SOURCE_DIR@/docs/mainpage.md" \
    "@CMAKE_CURRENT_SOURCE_DIR@/include/tempoch"
FILE_PATTERNS          = *.hpp *.md
RECURSIVE              = YES
EXAMPLE_PATH           = "@CMAKE_CURRENT_SOURCE_DIR@/examples"
EXAMPLE_PATTERNS       = *.cpp
USE_MDFILE_AS_MAINPAGE = "@CMAKE_CURRENT_SOURCE_DIR@/docs/mainpage.md"

ENABLE_PREPROCESSING   = YES
MACRO_EXPANSION        = NO
SKIP_FUNCTION_MACROS   = YES
INCLUDE_PATH           = \
    "@CMAKE_CURRENT_SOURCE_DIR@/include" \
    "@CMAKE_CURRENT_SOURCE_DIR@/tempoch/tempoch-ffi/include"

SOURCE_BROWSER         = YES
INLINE_SOURCES         = NO
REFERENCED_BY_RELATION = YES
REFERENCES_RELATION    = YES
VERBATIM_HEADERS       = YES

GENERATE_HTML          = YES
HTML_OUTPUT            = html
HTML_DYNAMIC_MENUS     = YES
GENERATE_TREEVIEW      = YES
TOC_INCLUDE_HEADINGS   = 2

GENERATE_LATEX         = NO
GENERATE_XML           = NO
